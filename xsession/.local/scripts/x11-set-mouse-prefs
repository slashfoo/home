if ! command -v xinput >/dev/null </dev/null 2>&1; then
    echo "xinput: command not found" >&2
    exit 1
fi

xinput set-prop \
    pointer:'Logitech MX Anywhere 2' \
    'libinput Natural Scrolling Enabled' 1

xinput set-prop \
    pointer:'Logitech MX Anywhere 2' \
    'libinput Accel Speed' -0.35

xinput set-prop \
    pointer:'Logitech MX Ergo' \
    'libinput Natural Scrolling Enabled' 1

xinput set-prop \
    pointer:'Logitech USB Receiver Mouse' \
    'libinput Natural Scrolling Enabled' 1

xinput set-prop \
    pointer:'Clearly Superior Technologies. CST Laser Trackball' \
    'libinput Natural Scrolling Enabled' 1

xinput set-prop \
    pointer:'Clearly Superior Technologies. CST Laser Trackball' \
    'libinput Accel Speed' -0.35

xinput set-prop \
    pointer:'Logitech Rechargeable Touchpad T650' \
    'Synaptics Finger' 1 12 0

xinput set-prop \
    pointer:'Logitech Rechargeable Touchpad T650' \
    'Synaptics ClickPad' 0

xinput set-prop \
    pointer:'Logitech Rechargeable Touchpad T650' \
    'Synaptics Two-Finger Scrolling' 1 1

xinput set-prop \
    pointer:'Logitech Rechargeable Touchpad T650' \
    'Synaptics Tap Action' 0 0 0 0 1 3 2

xinput set-prop \
    pointer:'Logitech Rechargeable Touchpad T650' \
    'Synaptics Click Action' 0 0 0

xinput set-prop \
    pointer:'Logitech Rechargeable Touchpad T650' \
    'Synaptics Scrolling Distance' -73 -73
