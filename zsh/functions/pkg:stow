# Convenience function to 'stow' packages from ${STOW_HOME} onto
# ${HOME}/.local

setopt no_unset
local pkg_name="${1}"
shift

stow \
    --dir="${STOW_HOME:a}" \
    --target="${HOME}/.local" \
    "${@}" \
    -v -S "${pkg_name}"
