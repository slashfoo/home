# List all functions in the current zsh session

local line
local pat
[[ "${#}" -ne 0 ]] || set -- '*:*'
for pat in "${(@)argv}"; do
    for line in "${(f):-$(functions -x2 -m "${pat}")}"; do
        [[ "${line}" != (' '*|'}'*|'') ]] && \
            [[ "${line}" == *' () {' ]] || \
            continue
        echo "${${:-${(z)line}}[1]}"
    done
done
