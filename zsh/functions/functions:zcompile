# Compile all functions in fpath if the the .zwc file is stale

autoload -U zargs
local funcdir
local -a zwcs=()
local funcfile
for funcdir in "${fpath[@]}"; do
    [[ "${funcdir:A}" == "${HOME}/"* ]] || continue
    for funcfile in "${funcdir}"/**/*~*.zwc(#q-N.); do
        if ! [[ "${funcfile}.zwc" -nt "${funcfile}" ]]; then
            print "recompiling ${funcfile:t}"
            zcompile -U "${funcfile}"
        fi
    done
done
