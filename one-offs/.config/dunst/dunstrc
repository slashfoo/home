[global]
    font = "Fira Code 16"
    markup = full
    format = "<b>%a:: %s</b>\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = center
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
