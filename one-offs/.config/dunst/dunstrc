    transparency = 30
    idle_threshold = 120
    monitor = 0
    follow = mouse
    sticky_history = yes
    history_length = 9999
    line_height = 0
    separator_height = 2
    padding = 8
    horizontal_padding = 8
    separator_color = frame
    browser = browse
    startup_notification = false
    frame_width = 1
    frame_color = "#3A3A3A"
    icon_path = /usr/share/icons/gnome/48x48/actions:/usr/share/icons/gnome/48x48/animations:/usr/share/icons/gnome/48x48/apps:/usr/share/icons/gnome/48x48/categories:/usr/share/icons/gnome/48x48/devices:/usr/share/icons/gnome/48x48/emblems:/usr/share/icons/gnome/48x48/emotes:/usr/share/icons/gnome/48x48/mimetypes:/usr/share/icons/gnome/48x48/places:/usr/share/icons/gnome/48x48/status
