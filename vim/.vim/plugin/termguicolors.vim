" set Vim-specific sequences for RGB colors
if has('termguicolors')
    set t_8f=[38;2;%lu;%lu;%lum
    set t_8b=[48;2;%lu;%lu;%lum

    if $COLORTERM == "truecolor"
        set termguicolors
    endif
endif
