# truncate the last i3 log to zero-size

typeset LAST_LOGFILE="$(
    find "${HOME}/.local/log" -name 'i3-*.log' | sort | tail -n1
)"
if [[ -z "${LAST_LOGFILE:-}" ]]; then
    echo "No logs to truncate" >&2
    exit 1
fi
exec truncate -c -s0 "${LAST_LOGFILE}"
